{
  "name": "@puresubs/chrome-extension",
  "version": "1.0.0",
  "description": "Chrome extension for downloading YouTube subtitles using PureSubs core engine",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "test": "jest --config jest.config.mjs --passWithNoTests",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "clean": "rimraf dist",
    "package": "npm run build && web-ext build --source-dir=dist --artifacts-dir=packages"
  },
  "dependencies": {
    "@puresubs/core-engine": "workspace:*"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "copy-webpack-plugin": "^12.0.0",
    "css-loader": "^6.8.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "rimraf": "^5.0.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "web-ext": "^7.8.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "keywords": [
    "chrome-extension",
    "youtube",
    "subtitles",
    "download",
    "captions"
  ],
  "author": "PureSubs Team",
  "license": "MIT"
}
