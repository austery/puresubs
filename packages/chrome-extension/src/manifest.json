{
  "manifest_version": 3,
  "name": "YouTube Subtitle Downloader",
  "version": "1.0.0",
  "description": "Download YouTube subtitles and captions with ease. Pure, fast, and ad-free.",
  
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*",
        "https://youtube.com/watch*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_title": "PureSubs - Download Subtitles"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "content.css",
        "core/injected-spy.js"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "use_dynamic_url": true
    }
  ]
}
