{
  "name": "@puresubs/core-engine",
  "version": "0.1.0",
  "description": "Core engine for extracting YouTube video metadata and subtitles",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "rollup -c rollup.config.js -w",
    "build": "rollup -c rollup.config.js",
    "test": "jest --config jest.config.mjs",
    "test:watch": "jest --config jest.config.mjs --watch",
    "test:coverage": "jest --config jest.config.mjs --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=html",
    "lint": "cd ../.. && npx eslint packages/core-engine/src/",
    "lint:fix": "cd ../.. && npx eslint packages/core-engine/src/ --fix",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "youtube",
    "subtitles",
    "captions",
    "extractor",
    "metadata"
  ],
  "author": "PureSubs Team",
  "license": "MIT"
}